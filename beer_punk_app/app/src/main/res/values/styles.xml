<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="details_header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/standart_margin</item>
        <item name="android:layout_marginEnd">@dimen/standart_margin</item>
        <item name="android:layout_marginTop">@dimen/standart_margin</item>
        <item name="android:layout_marginBottom">@dimen/standart_margin</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="details_content_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:layout_marginTop">@dimen/standart_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/standart_small_margin</item>
    </style>

    <style name="details_palette_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/standart_small_margin</item>
        <item name="android:layout_marginEnd">@dimen/standart_small_margin</item>
        <item name="android:layout_marginTop">@dimen/standart_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/standart_small_margin</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">@dimen/standart_margin</item>
    </style>

    <style name="details_halfpalette_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/half_small_margin</item>
        <item name="android:layout_marginEnd">@dimen/half_small_margin</item>
        <item name="android:layout_marginTop">@dimen/standart_small_margin</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">@dimen/standart_margin</item>
    </style>

    <style name="details_subpalette_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/standart_small_margin</item>
        <item name="android:layout_marginEnd">@dimen/standart_small_margin</item>
        <item name="android:layout_marginTop">@dimen/standart_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/standart_small_margin</item>
        <item name="android:paddingBottom">@dimen/standart_margin</item>
        <item name="android:background">@color/lightGray</item>
    </style>





