<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.beerpunkapp.screen.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_startFragment_to_randomBeerFragment"
            app:destination="@id/randomBeerFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.beerpunkapp.screen.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="beerId"
            android:defaultValue="0L"
            app:argType="long"
            />
    </fragment>
    <fragment
        android:id="@+id/randomBeerFragment"
        android:name="com.example.beerpunkapp.screen.RandomBeerFragment"
        android:label="RandomBeerFragment"
        tools:layout="@layout/fragment_random_beer"/>
</navigation>