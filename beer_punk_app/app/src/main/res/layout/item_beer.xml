<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/item_photo"
        android:layout_width="60dp"
        android:layout_height="150dp"
        android:layout_marginStart="@dimen/standart_margin"
        android:layout_marginVertical="@dimen/standart_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src = "@drawable/recycler_view_placeholder"
        />
    <TextView
        android:id="@+id/item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/item_photo"
        app:layout_constraintStart_toEndOf="@+id/item_photo"
        android:layout_marginStart="@dimen/standart_inside_margin"
        android:textSize="@dimen/large_text"

        />
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/item_photo"
        app:layout_constraintStart_toEndOf="@+id/item_id"
        android:layout_marginStart="@dimen/standart_inside_margin"
        android:textSize="@dimen/large_text"

        />
    <TextView
        android:id="@+id/item_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_id"
        app:layout_constraintStart_toEndOf="@+id/item_photo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/standart_inside_margin"
        android:layout_marginTop="@dimen/standart_inside_margin"
        android:layout_marginEnd="@dimen/standart_margin"
        android:textSize="@dimen/medium_text"
        android:textStyle="italic"
        />
    <TextView
        android:id="@+id/item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_tag"
        app:layout_constraintStart_toEndOf="@+id/item_photo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/standart_margin"
        android:layout_marginStart="@dimen/standart_inside_margin"
        android:textSize="@dimen/small_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>